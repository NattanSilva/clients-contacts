{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}